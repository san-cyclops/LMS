
@{
    ViewData["Title"] = "Subjects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-orange" ng-app="apimodule">
    <div class="panel-heading">
        Subjects
    </div>
    <div class="panel-body pan" ng-controller="MainCtrl as main">
        <form>
            <div class="form-body pal">
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        Subject Code
                    </label>
                    <div class="input-icon right">
                         <input id="inputName" ng-model="main.subjects.subjectCode" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        Subject Name
                    </label>
                    <div class="input-icon right">
                        <input id="inputEmail" ng-model="main.subjects.subjectName" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        Credits
                    </label>
                    <div class="input-icon right">
                        <input id="inputEmail" ng-model="main.subjects.credits" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        Credit Hours
                    </label>
                    <div class="input-icon right">
                        <input id="inputEmail" ng-model="main.subjects.creditHours" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        Status
                    </label>
                    <div class="input-icon right">
                        <i class="fa fa-check"></i>
                        <select class="form-control" name="Status" id="Status" ng-model="main.subjects.status">
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-actions text-right pal">
                <button ng-click="main.addClickHandler()" class="btn btn-primary">
                    Save
                </button>
                <button ng-click="main.resetClickHandler()" class="btn btn-primary">
                    Clear Form
                </button>
            </div>

            <div class="panel-body">
                <label>Search:</label>
                <input type="text" ng-model="main.search" />
                <table class="table table-hover table-condensed" ng-show="main.addresses">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Subject Code</th>
                            <th>Subject Name</th>
                            <th>Credits</th>
                            <th>Credit Hours</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in main.addresses |filter:main.search ">
                            <td ng-bind="item.subjectCode "></td>
                            <td ng-bind="item.subjectName "></td>
                            <td ng-bind="item.credits "></td>
                            <td ng-bind="item.creditHours "></td>
                            <td ng-bind="item.status "></td>
                            <td>
                                <button class="btn btn-primary" ng-click="main.editClickHandler(item)">Edit</button>
                                <button class="btn btn-danger" ng-click="main.removeClickHandler(item)">Remove</button>
                            </td>
                        </tr>


                    </tbody>
                </table>
            </div>

        </form>
    </div>
</div>
<script src="https://code.angularjs.org/1.5.8/angular.js"></script>
<script src="~/js/app_subjects.js"></script>


