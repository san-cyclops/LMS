
@{
    ViewData["Title"] = "Lecture";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<div class="panel panel-orange" ng-app="apimodule">
    <div class="panel-heading">
        Lecture
    </div>
    <div class="panel-body pan" ng-controller="MainCtrl as main">
        <form>
            <div class="form-body pal">
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        Name
                    </label>
                    <div class="input-icon right">
                        <input id="inputName" ng-model="main.lecture.Name" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        Email
                    </label>
                    <div class="input-icon right">
                        <input id="inputEmail" ng-model="main.lecture.Email" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        Tp No
                    </label>
                    <div class="input-icon right">
                        <input id="inputEmail" ng-model="main.lecture.TpNo" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        Address
                    </label>
                    <div class="input-icon right">
                        <input id="inputEmail" ng-model="main.lecture.Address" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        Whatsapp No
                    </label>
                    <div class="input-icon right">
                        <input id="inputEmail" ng-model="main.lecture.WhatsappNo" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        NIC/SLIN
                    </label>
                    <div class="input-icon right">
                        <input id="inputEmail" ng-model="main.lecture.NIC_SLIN" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        Designation
                    </label>
                    <div class="input-icon right">
                        <i class="fa fa-check"></i>
                        <select class="form-control" name="Status" id="Status" ng-model="main.lecture.Designation">
                            <option value="Test_D1">Test_D1</option>
                            <option value="Test_D2">Test_D2</option>
                            <option value="Test_D3">Test_D3</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        Status
                    </label>
                    <div class="input-icon right">
                        <i class="fa fa-check"></i>
                        <select class="form-control" name="Status" id="Status" ng-model="main.lecture.Status">
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-actions text-right pal">
                <button ng-click="main.addClickHandler()" class="btn btn-primary">
                    Save
                </button>
                <button ng-click="main.resetClickHandler()" class="btn btn-primary">
                    Clear Form
                </button>
            </div>

            <div class="panel-body">
                <label>Search:</label>
                <input type="text" ng-model="main.search" />
                <table class="table table-hover table-condensed" ng-show="main.addresses">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>TpNo</th>
                            <th>address</th>
                            <th>whatsappNo</th>
                            <th>NIC_SLIN</th>
                            <th>designation</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in main.addresses |filter:main.search ">
                            <td ng-bind="item.Name "></td>
                            <td ng-bind="item.Email "></td>
                            <td ng-bind="item.TpNo "></td>
                            <td ng-bind="item.Address "></td>
                            <td ng-bind="item.WhatsappNo "></td>
                            <td ng-bind="item.NIC_SLIN "></td>
                            <td ng-bind="item.Designation "></td>
                            <td ng-bind="item.Status "></td>
                            <td>
                                <button class="btn btn-primary" ng-click="main.editClickHandler(item)">Edit</button>
                                <button class="btn btn-danger" ng-click="main.removeClickHandler(item)">Remove</button>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>

        </form>
    </div>
</div>
<script src="https://code.angularjs.org/1.5.8/angular.js"></script>
<script src="~/js/app_lecture.js"></script>
