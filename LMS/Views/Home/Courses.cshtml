
@{
    ViewData["Title"] = "Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@{
    ViewData["Title"] = "CourseType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-orange" ng-app="apimodule">
    <div class="panel-heading">
        Courses
    </div>
    <div class="panel-body pan" ng-controller="MainCtrl as main">
        <form>
            <div class="form-body pal">
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        Course Code
                    </label>
                    <div class="input-icon right">
                         <input id="inputName" ng-model="main.courses.courseCode" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        Name
                    </label>
                    <div class="input-icon right">
                        <input id="inputEmail" ng-model="main.courses.name" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        Display on public websites
                    </label>
                    <select class="form-control" name="Status" id="Status" ng-model="main.courses.dispalyOnPublic">
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        Duration
                    </label>
                    <div class="input-icon right">
                        <input id="inputEmail" ng-model="main.courses.duration" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        Admission Requement
                    </label>
                    <div class="input-icon right">
                        <input id="inputEmail" ng-model="main.courses.admissionRequement" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        Course Amount
                    </label>
                    <div class="input-icon right">
                        <input id="inputEmail" ng-model="main.courses.courseAmount" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        Status
                    </label>
                    <div class="input-icon right">
                        <select class="form-control" name="Status" id="Status" ng-model="main.courses.status">
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        Initial Amount
                    </label>
                    <div class="input-icon right">
                        <input id="inputEmail" ng-model="main.courses.initialAmount" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="control-label">
                        Course Type
                    </label>
                    <div class="input-icon right">
                        <select class="form-control" name="Status" id="Status" ng-model="main.courses.courseType">
                            <option value="Test_01">Test_01</option>
                            <option value="Test_02">Test_02</option>
                            <option value="Test_03">Test_03</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="control-label">
                         Bank Account
                    </label>
                    <div class="input-icon right">
                        <input id="inputEmail" ng-model="main.courses.bankAccount" type="text" class="form-control" />
                    </div>
                </div>





            </div>
            <div class="form-actions text-right pal">
                <button ng-click="main.addClickHandler()" class="btn btn-primary">
                    Save
                </button>
                <button ng-click="main.resetClickHandler()" class="btn btn-primary">
                    Clear Form
                </button>
            </div>

            <div class="panel-body">
                <label>Search:</label>
                <input type="text" ng-model="main.search" />
                <table class="table table-hover table-condensed" ng-show="main.addresses">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Course Code</th>
                            <th>Name</th>
                            <th>Dis. On Pub.</th>
                            <th>Duration</th>
                            <th>Admission Req</th>
                            <th>Course Amt</th>
                            <th>Status</th>
                            <th>Init Amt</th>
                            <th>Course Type</th>
                            <th>Bank Account</th> 
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in main.addresses |filter:main.search ">
                            <td ng-bind="item.courseCode "></td>
                            <td ng-bind="item.name "></td>
                            <td ng-bind="item.dispalyOnPublic "></td>
                            <td ng-bind="item.duration "></td>
                            <td ng-bind="item.admissionRequement "></td>
                            <td ng-bind="item.courseAmount "></td>
                            <td ng-bind="item.status "></td>
                            <td ng-bind="item.initialAmount "></td>
                            <td ng-bind="item.courseType "></td>
                            <td ng-bind="item.bankAccount "></td>
                            <td>
                                <button class="btn btn-primary" ng-click="main.editClickHandler(item)">Edit</button>
                                <button class="btn btn-danger" ng-click="main.removeClickHandler(item)">Remove</button>
                            </td>
                        </tr>


                    </tbody>
                </table>
            </div>

        </form>
    </div>
</div>
<script src="https://code.angularjs.org/1.5.8/angular.js"></script>
<script src="~/js/app_courses.js"></script>
